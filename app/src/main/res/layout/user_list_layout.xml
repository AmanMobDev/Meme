<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:backgroundTint="@color/black"
                android:background="@drawable/imagebghome">



                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_list_image"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_userdummy"
                    />

            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="5dp">


                <TextView
                    android:id="@+id/user_list_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile Name"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:fontFamily="@font/cormorantgaramond_semibold"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    />

            </LinearLayout>




        </LinearLayout>


        <TextView
            android:id="@+id/followUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/followtextbutton"
            android:fontFamily="@font/kalam_bold"
            android:textStyle="bold"
            android:background="@drawable/buttonbg"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="14sp"
            android:layout_marginRight="8dp"
            android:textColor="@color/white" />



    </LinearLayout>

</androidx.cardview.widget.CardView>